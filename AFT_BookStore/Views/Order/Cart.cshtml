@{
    ViewData["Title"] = "OrderingGuide";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="~/css/cart.css" rel="stylesheet" asp-append-version="true" />
}

<!-- Page Preloder -->
<div id="preloder">
    <div class="loader"></div>
</div>

<div class="page-header">
    <div class="container">
        <nav class="breadcrumb">
            <a href="#">Trang Chủ</a>
            <span> > </span>
            <span>Giỏ hàng</span>
        </nav>
    </div>
</div>
<div class="container">
    <section class="mt-60 mb-60">
        <div class="container">
            <div class="row">
                <div class="col-12 section--shopping-cart">
                    <div class="form">
                        <div class="table-responsive">
                            <table>
                                <thead>
                                    <tr class="main-heading">
                                        <th>Hình ảnh</th>
                                        <th>Tên</th>
                                        <th>Giá</th>
                                        <th>Số lượng</th>
                                        <th>Tạm tính</th>
                                        <th>Xóa</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            <img src="https://hanoibookstore.com/storage/oxford-reading-and-writing-skill-sach-mau6-150x150.jpg" />
                                        </td>
                                        <td class="product-des product-name">
                                            <p class="product-name"><a href="#">OXFORD READING AND WRITING SKILL (Sách màu)  </a></p>
                                        </td>
                                        <td class="price">
                                            <span>70,000₫</span>
                                        </td>
                                        <td class="text-center">
                                            s
                                        </td>
                                        <td class="text-right">
                                            <span>70,000₫</span>
                                        </td>
                                        <td class="action">
                                            <a href="#"><i class="fa fa-trash-alt"></i></a>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <img src="https://hanoibookstore.com/storage/oxford-reading-and-writing-skill-sach-mau6-150x150.jpg" />
                                        </td>
                                        <td class="product-des product-name">
                                            <p class="product-name"><a href="#">OXFORD READING AND WRITING SKILL (Sách màu)  </a></p>
                                        </td>
                                        <td class="price">
                                            <span>70,000₫</span>
                                        </td>
                                        <td class="text-center">
                                            s
                                        </td>
                                        <td class="text-right">
                                            <span>70,000₫</span>
                                        </td>
                                        <td class="action">
                                            <a href="#"><i class="fa fa-trash-alt"></i></a>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="cart-action text-end">
                            <a class="btn btn-rounded" href="#">
                                <i class="far fa-cart-plus mr-5"></i>
                                Tiếp tục mua sắm
                            </a>
                        </div>
                        <div class="">
                            <i class="fa fa-gem"></i>
                        </div>
                        <div class="row mb-50">
                            <div class="col-lg-6 col-md-12">
                                <div class="mb-30 mt-50">
                                    <div class="heading_s1 mb-3">
                                        <h4>Áp dụng mã giảm giá</h4>
                                    </div>
                                    <div class="form-row row justify-content-center">
                                        <div class="form-group col-lg-6">
                                            <input class="font-medium coupon-code" type="text" value="" placeholder="Nhập mã giảm giá" />
                                        </div>
                                        <div class="form-group col-lg-6 mt-1">
                                            <button class="btn btn-rounded btn-sm btn-apply-coupon-code">
                                                <i class="far fa-bookmark mr-5"></i>
                                                Áp dụng
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-12">
                                <div class="border p-md-4 p-30 border-radius-10 cart-totals">
                                    <div class="heading_s1 mb-3">
                                        <h4>Tổng cộng</h4>
                                    </div>
                                    <div class="table-responsive">
                                        <table class="table">
                                            <tbody>
                                                <tr>
                                                    <td class="cart_total_label">Tổng cộng <small>(Chưa bao gồm phí vận chuyển)</small></td>
                                                    <td class="cart_total_amount">
                                                        <strong><span class="font-xl text-brand">420,000₫</span></strong>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                    <button class="btn border-radius-50">
                                        <i class="fa fa-share-square mr-10"></i>
                                        Proceed To Checkout
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>